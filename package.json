{
  "name": "zonesmart-test",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "vite",
    "server": "nodemon",
    "build": "vue-tsc && vite build",
    "preview": "vite preview"
  },
  "nodemonConfig":{
    "watch": [
      "server"
    ],
    "exec": "tsc -p .\\tsconfig.node.json && node ./dist/app.js",
    "ext": "ts,js,json"
  },
  "dependencies": {
    "nodemon": "^3.1.0",
    "pug": "^3.0.2",
    "sass": "^1.72.0",
    "ts-node": "^10.9.2",
    "vue": "^3.4.21",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.2",
    "@vitejs/plugin-vue": "^5.0.4",
    "axios": "^1.6.8",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "typescript": "^5.4.3",
    "vite": "^5.2.0",
    "vue-router": "^4.3.0",
    "vue-tsc": "^2.0.6"
  }
}
